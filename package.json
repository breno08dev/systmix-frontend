    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-to-print": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
